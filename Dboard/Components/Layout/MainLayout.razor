@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main style="background:#f3f3f3;">
        <div class="top-row px-4 flex-row align-items-center gap-2">
         <Icon Type="user" Style="border:1px solid #eee; padding:5px;border-radius:50%;background:#eee;"></Icon>
         <span>Admin</span>
         <Icon Type="arrow-down"></Icon>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
